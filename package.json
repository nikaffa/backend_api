{
  "name": "blogposts_backend_challenge",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.js",
  "scripts": {
    "test": "jest --detectOpenHandles --coverage --colors",
    "start": "node src/server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikaffa/blogposts_backend_challenge.git"
  },
  "author": "Veronika Fatikhova",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nikaffa/blogposts_backend_challenge/issues"
  },
  "homepage": "https://github.com/nikaffa/blogposts_backend_challenge#readme",
  "dependencies": {
    "apicache": "^1.6.3",
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "<rootDir>/src/helpers.js",
      "<rootDir>/routes/**",
      "!<rootDir>/node_modules/",
      "!<rootDir>/coverage/"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/coverage/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
      }
    },
    "verbose": true
  }
}

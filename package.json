{
  "name": "blogposts_backend_challenge",
  "version": "1.0.0",
  "description": "",
  "main": "src/app.js",
  "scripts": {
    "test": "jest --coverage --colors",
    "start": "node src/app.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikaffa/blogposts_backend_challenge.git"
  },
  "author": "Veronika Fatikhova",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nikaffa/blogposts_backend_challenge/issues"
  },
  "homepage": "https://github.com/nikaffa/blogposts_backend_challenge#readme",
  "dependencies": {
    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "express": "^4.18.1"
  },
  "devDependencies": {
    "jest": "^28.1.0",
    "nodemon": "^2.0.16",
    "supertest": "^6.2.3"
  },
  "jest": {

    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "<rootDir>/routes/**",
      "<rootDir>/__tests__/**",
      "!<rootDir>/node_modules/"
    ],
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/coverage"
    ],
    "coverageThreshold": {
      "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
      }
    },
    "verbose": true
  }
}
